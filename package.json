{
  "name": "sagani",
  "version": "1.0.0",
  "description": "HTML Markup for sagani news and blog theme",
  "main": "src/app.js",
  "scripts": {
    "watch-sass": "sass sass/main.scss style.css -w",
    "dev-server": "live-server",
    "compile-sass": "sass sass/main.scss css/style.comp.css",
    "start": "npm-run-all --parallel dev-server watch-sass build-js",
    "prefix-css": "postcss --use autoprefixer -b 'last 10' css/style.comp.css -o style.css",
    "build": "npm-run-all compile-sass prefix-css",
    "build-js": "webpack src/app.js --watch"
  },
  "author": "Eliasu Abraman",
  "license": "ISC",
  "dependencies": {
    "lighthouse": "^6.4.1",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@wordpress/scripts": "^12.2.1",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "dir-archiver": "^1.1.2",
    "grunt": "^1.3.0",
    "jquery": "^3.5.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "sass": "^1.57.1",
    "sass-rem": "^2.0.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  }
}
