{
  "name": "sagani",
  "version": "1.0.0",
  "description": "HTML Markup for sagani news and blog theme",
  "main": "index.js",
  "scripts": {
    "watch-sass": "node-sass sass/main.scss css/style.css -w",
    "dev-server": "live-server",
    "compile-sass": "node-sass sass/main.scss css/style.comp.css",
    "start": "npm-run-all --parallel dev-server watch-sass",
    "prefix-css": "postcss --use autoprefixer -b 'last 10' css/style.comp.css -o css/style.css",
    "build": "npm-run-all compile-sass prefix-css"
  },
  "author": "Eliasu Abraman",
  "license": "ISC",
  "dependencies": {
    "node-sass": "^4.12.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.7",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.1"
  }
}
